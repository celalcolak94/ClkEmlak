@model ResultContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">İletişim</h4>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">İletişim Güncelleme İşlemi</div>
			</div>
			<form method="post" asp-area="Admin" asp-controller="AdminContact" asp-action="UpdateContact">
				<div class="card-body">
					<input type="hidden" asp-for="ContactID" />
					<div class="form-group">
						<label for="Location">Lokasyon</label>
						<input asp-for="Location" type="text" class="form-control" id="Location" placeholder="Lokasyon">
						<span class="text-danger" asp-validation-for="Location"></span>
					</div>
					<div class="form-group">
						<label for="Email">Email Adresi</label>
						<input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Email Adresi">
						<span class="text-danger" asp-validation-for="Location"></span>
					</div>
					<div class="form-group">
						<label for="Phone">Telefon</label>
						<input asp-for="Phone" type="text" class="form-control" id="Phone" placeholder="Telefon Numarası">
						<span class="text-danger" asp-validation-for="Phone"></span>
					</div>
					<div class="form-group">
						<label for="Phone2">Telefon 2</label>
						<input asp-for="Phone2" type="text" class="form-control" id="Phone2" placeholder="Telefon Numarası 2">
						<span class="text-danger" asp-validation-for="Phone2"></span>
					</div>
				</div>
				<div class="card-action">
					<button type="submit" class="btn btn-success">Güncelle</button>
					<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-danger">Vazgeç</a>
				</div>
			</form>
		</div>
	</div>
</div>