@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">İletişim</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between pr-5">
                <div class="card-title">İletişim Listesi</div>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Lokasyon</th>
                            <th scope="col">Mail Adresi</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Telefon 2</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Location</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Phone2</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="AdminContact" asp-action="UpdateContact" asp-route-id="@item.ContactID" class="btn btn-outline-warning">
                                        Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>