@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h4 class="page-title">Mesajlar</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between pr-5">
                <div class="card-title">Gelen Mesaj Listesi</div>
            </div>
            <div class="card-body">
                <table class="table table-hover" style="overflow-x:auto;">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Adı Soyadı</th>
                            <th scope="col">Mail Adresi</th>
                            <th scope="col">Konu</th>
                            <th scope="col">Mesaj</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Subject</td>
                                <td>@item.MessageDetail</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Message" asp-action="RemoveMessage" asp-route-id="@item.MessageID" class="btn btn-outline-danger">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>