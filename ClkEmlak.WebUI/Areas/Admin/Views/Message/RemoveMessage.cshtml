@model ResultMessageDto
@{
    ViewData["Title"] = "RemoveMessage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Mesajlar</h4>
<div class="row">
	<div class="col-md-8">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Mesaj Silme İşlemi</div>
			</div>
			<form method="post" asp-area="Admin" asp-controller="Message" asp-action="RemoveMessage">
				<div class="card-body">
					<input type="hidden" asp-for="MessageID" />
					<strong>@Model.Subject</strong> konulu mesajı silmek istediğinize emin misiniz?
				</div>
				<div class="card-action">
					<button type="submit" class="btn btn-danger">Sil</button>
					<a asp-area="Admin" asp-controller="Message" asp-action="Index" class="btn btn-warning">Vazgeç</a>
				</div>
			</form>
		</div>
	</div>
</div>