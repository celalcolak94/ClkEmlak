<div class="main-header">
    <div class="logo-header">
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="logo">
            Admin Paneli
        </a>
        <button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse" data-target="collapse" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <button class="topbar-toggler more"><i class="la la-ellipsis-v"></i></button>
    </div>
    <nav class="navbar navbar-header navbar-expand-lg">
        <div class="container-fluid">
            <ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
                <li class="nav-item dropdown hidden-caret">
                    <a class="nav-link" asp-area="Admin" asp-controller="Message" asp-action="Index">
                        <i class="la la-envelope"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false"> <img src="/DashboardThema/assets/img/profile.jpg" alt="user-img" width="36" class="img-circle"><span>@User.Identity.Name</span></a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <div class="user-box">
                                <div class="u-img"><img src="/DashboardThema/assets/img/profile.jpg" alt="user"></div>
                                <div class="u-text">
                                    <h4>@User.Identity.Name</h4>
                                </div>
                            </div>
                        </li>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="LogOut"><i class="fa fa-power-off"></i> Çıkış</a>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</div>