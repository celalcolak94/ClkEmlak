@model ResultSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Sosyal Medyalar</h4>
<div class="row">
	<div class="col-md-8">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Sosyal Medya Güncelleme İşlemi</div>
			</div>
			<form method="post" asp-area="Admin" asp-controller="SocialMedia" asp-action="UpdateSocialMedia">
				<div class="card-body">
					<input type="hidden" asp-for="SocialMediaID" />
					<input type="hidden" asp-for="Icon" />
					<input type="hidden" asp-for="Name">
					<h4 class="text-center">@Model.Name</h4>
					<div class="form-group">
						<label for="url">Web Adresi</label>
						<input asp-for="Url" type="text" class="form-control" id="url">
						<span class="text-danger" asp-validation-for="Url"></span>
					</div>
				</div>
				<div class="card-action">
					<button type="submit" class="btn btn-success">Güncelle</button>
					<a asp-area="Admin" asp-controller="SocialMedia" asp-action="Index" class="btn btn-danger">Vazgeç</a>
				</div>
			</form>
		</div>
	</div>
</div>