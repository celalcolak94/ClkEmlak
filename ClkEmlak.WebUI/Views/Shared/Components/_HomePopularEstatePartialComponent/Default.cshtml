@model List<EstateWithCategoryDto>
<div class="section">
    <div class="container">
        <div class="row mb-5 align-items-center">
            <div class="col-lg-6">
                <h2 class="font-weight-bold text-primary heading">
                    Popüler Gayrimenkuller
                </h2>
            </div>
            <div class="col-lg-6 text-lg-end">
                <p>
                    <a asp-controller="RealEstate" asp-action="Index"
                       style="background-color:#78c724;"
                       target="_blank"
                       class="btn btn-primary text-white py-3 px-4">Tüm Gayrimenkuller</a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="property-slider-wrap">
                    <div class="property-slider">
                        @foreach (var item in Model)
                        {
                            <div class="property-item">
                                <a asp-controller="RealEstate" asp-action="Details" asp-route-id="@item.EstateID" class="img">
                                    <img src="@item.CoverPhoto" alt="Image" style="width:100%;height:420px;" />
                                </a>

                                <div class="property-content">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="price mb-2" style="color:#78c724;"><span>@item.CategoryName</span></div>
                                        </div>
                                        <div class="col-6 text-end">
                                            <div class="price mb-2"><span class="text-danger">@item.Price.ToString("N0") ₺</span></div>
                                        </div>
                                    </div>
                                    <div>
                                        <span class="d-block mb-2 text-black-50 fs-6">@item.Title</span>
                                        <span class="city d-block mb-3">@item.Province, @item.District</span>

                                        <div class="specs d-flex mb-4">
                                            <span class="d-block d-flex align-items-center me-3">
                                                <span class="icon-bed me-2"></span>
                                                <span class="caption">@item.Rooms oda</span>
                                            </span>
                                            <span class="d-block d-flex align-items-center">
                                                <span class="icon-bath me-2"></span>
                                                <span class="caption">@item.BathNumber banyo</span>
                                            </span>
                                        </div>

                                        <a asp-controller="RealEstate" asp-action="Details" asp-route-id="@item.EstateID"
                                           class="btn btn-primary py-2 px-3" style="background-color:#78c724;">Detaylar</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div id="property-nav"
                         class="controls"
                         tabindex="0"
                         aria-label="Carousel Navigation">
                        <span class="prev"
                              data-controls="prev"
                              aria-controls="property"
                              tabindex="-1">Geri</span>
                        <span class="next"
                              data-controls="next"
                              aria-controls="property"
                              tabindex="-1">İleri</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>